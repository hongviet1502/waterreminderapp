<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="vn.com.rd.waterreminder.ui.viewmodel.HomeViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="32dp"
            tools:context=".ui.activity.GoalActivity">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:theme="@style/TransparentBar"
                app:title="Set your goal" />

            <!--        <LinearLayout-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:gravity="center"-->
            <!--            android:orientation="vertical"-->
            <!--            app:visibleGone="@{viewModel.isLoading}">-->

            <!--            <ProgressBar-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:indeterminateTint="@color/primary" />-->

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="16dp"-->
            <!--                android:text="Loading"-->
            <!--                android:textColor="@color/black" />-->
            <!--        </LinearLayout>-->


            <LinearLayout
                android:id="@+id/ll_set_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                app:visibleGone="@{!viewModel.isLoading}">

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/number_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:np_dividerColor="@color/black"
                    app:np_dividerType="underline"
                    app:np_fadingEdgeEnabled="true"
                    app:np_height="110dp"
                    app:np_max="59"
                    app:np_min="0"
                    app:np_orientation="horizontal"
                    app:np_value="3"
                    app:np_width="300dp" />

                <!-- Spinner -->
                <androidx.cardview.widget.CardView
                    style=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="12dp">

                    <Spinner
                        android:id="@+id/spn_unit"
                        android:layout_width="200dp"
                        android:layout_height="48dp"
                        android:entries="@array/unit_array"
                        android:padding="8dp" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="Reminder"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set up reminders to help you crush your new habit goals"
                android:textColor="@color/text_disabled"
                android:textSize="14sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_reminder" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:id="@+id/ll_add_new"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/ic_add_reminder"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/custom_bt_pickdevice"
                        android:padding="16dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/icon_plus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="ADD REMINDER"
                        android:textColor="@color/text_disabled"
                        android:textFontWeight="500"
                        android:textSize="15sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</layout>